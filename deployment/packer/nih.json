{
  "variables": {
    "ubuntu_precise_x64": "ami-12296b7a",
    "app_directory": "/home/ubuntu/nih-wayfinding",
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "name": "nih-wayfinding",
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "region": "us-east-1",
      "source_ami": "{{ user `ubuntu_precise_x64` }}",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "nih-wayfinding-{{timestamp}}"
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "../../src/nih_wayfinding",
      "destination": "{{user `app_directory`}}"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 10",
        "sudo apt-get update",
        "sudo apt-get -y install build-essential python-dev python-pip",
        "sudo pip install ansible==1.8.2"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "../ansible/app-servers.yml",
      "playbook_dir": "../ansible/",
      "inventory_file": "../ansible/prototype_hosts"
    },
    {
      "type": "ansible-local",
      "playbook_file": "../ansible/otp-servers.yml",
      "playbook_dir": "../ansible/",
      "inventory_file": "../ansible/prototype_hosts"
    }
  ]
}
